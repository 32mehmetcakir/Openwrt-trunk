
config policy 'wan_only'
	list use_member 'wan_m1_w3'

config policy 'wan2_only'
	list use_member 'wan2_m1_w2'

config policy 'wan3_only'
	list use_member 'wan3_m1_w2'
	option last_resort 'unreachable'

config policy 'balanced'
	list use_member 'wan_m1_w3'
	list use_member 'wan2_m1_w2'
	list use_member 'wan3_m1_w2'
	option last_resort 'unreachable'

config policy 'wan_wan2'
	list use_member 'wan_m1_w3'
	list use_member 'wan2_m2_w2'

config policy 'wan_wan3'
	list use_member 'wan_m1_w3'
	list use_member 'wan3_m2_w2'
	option last_resort 'unreachable'

config policy 'wan2_wan'
	list use_member 'wan_m2_w3'
	list use_member 'wan2_m1_w2'

config policy 'wan2_wan3'
	list use_member 'wan2_m1_w2'
	list use_member 'wan3_m2_w2'
	option last_resort 'unreachable'

config policy 'wan3_wan'
	list use_member 'wan3_m2_w2'
	list use_member 'wan_m1_w3'
	option last_resort 'unreachable'

config policy 'wan3_wan2'
	list use_member 'wan3_m1_w2'
	list use_member 'wan2_m2_w2'
	option last_resort 'unreachable'

config member 'wan_m1_w3'
	option interface 'wan'
	option metric '1'
	option weight '2'

config member 'wan2_m1_w2'
	option interface 'wan2'
	option metric '1'
	option weight '2'

config member 'wan2_m2_w2'
	option interface 'wan2'
	option metric '2'
	option weight '2'

config member 'wan_m2_w3'
	option interface 'wan'
	option metric '2'
	option weight '3'

config interface 'wan2'
	option count '1'
	option reliability '2'
	option down '10'
	option timeout '2'
	option enabled '1'
	option interval '5'
	option up '2'

config interface 'wan'
	option count '1'
	option timeout '2'
	option interval '5'
	option up '8'
	option reliability '1'
	list track_ip '8.8.8.8'
	list track_ip '8.8.4.4'
	list track_ip '192.168.1.1'
	option down '10'
	option enabled '0'

config rule 'https'
	option sticky '1'
	option dest_port '443'
	option proto 'tcp'
	option use_policy 'balanced'

config rule 'default_rule'
	option dest_ip '0.0.0.0/0'
	option use_policy 'balanced'

config interface 'wan3'
	list track_ip '8.8.8.8'
	list track_ip '8.8.4.4'
	list track_ip '192.168.2.1'
	option count '1'
	option timeout '2'
	option interval '5'
	option reliability '3'
	option down '10'
	option up '8'
	option enabled '0'

config member 'wan3_m1_w2'
	option interface 'wan3'
	option metric '1'
	option weight '2'

config member 'wan3_m2_w2'
	option interface 'wan3'
	option metric '2'
